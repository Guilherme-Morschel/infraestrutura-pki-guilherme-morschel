[ ca ]
default_ca = CA_default

[ CA_default ]
dir               = .                   # diretório atual (intermediaria)
certs             = $dir/certs
crl_dir           = $dir/crl
database          = $dir/index.txt
new_certs_dir     = $dir/newcerts
certificate       = $dir/certs/intermediaria.crt
serial            = $dir/serial
crlnumber         = $dir/crlnumber
crl               = $dir/crl/intermediaria.crl
private_key       = $dir/private/intermediaria.key
RANDFILE          = $dir/private/.rand

# Padrões
default_days      = 1825
default_crl_days  = 30
default_md        = sha256
preserve          = no
policy            = policy_loose
email_in_dn       = no
name_opt          = ca_default
cert_opt          = ca_default
copy_extensions   = copy

[ policy_loose ]
countryName             = optional
stateOrProvinceName     = optional
organizationName        = optional
organizationalUnitName  = optional
commonName              = supplied
emailAddress            = optional

[ req ]
default_bits        = 4096
default_md          = sha256
prompt              = no
distinguished_name  = dn_inter
x509_extensions     = v3_intermediate_ca

[ dn_inter ]
CN = AC Intermediária - Guilherme Morschel
O  = Trabalho de Segurança da Informação
C  = BR

[ v3_intermediate_ca ]
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid:always,issuer:always
basicConstraints = critical, CA:true, pathlen:0
keyUsage = critical, keyCertSign, cRLSign
authorityInfoAccess = caIssuers;URI:http://pki.local/intermediaria.crt
crlDistributionPoints = URI:http://pki.local/crl/intermediaria.crl

[ v3_server ]
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid,issuer
basicConstraints = critical, CA:FALSE
keyUsage = critical, digitalSignature, keyEncipherment
extendedKeyUsage = serverAuth
authorityInfoAccess = caIssuers;URI:http://pki.local/intermediaria.crt
crlDistributionPoints = URI:http://pki.local/crl/intermediaria.crl